<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:id="@+id/linearLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="16dp"
       android:layout_weight="3"
       android:orientation="vertical"
       tools:ignore="MissingConstraints"
       tools:layout_editor_absoluteX="16dp"
       android:paddingTop="@dimen/box_size">

      <LinearLayout
          android:id="@+id/line_1_2_3"
          android:layout_width="match_parent"
          android:layout_height="@dimen/box_size"
          android:layout_weight="1"
          android:orientation="horizontal">


         <Button
             android:id="@+id/button_1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginEnd="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=" "
             android:textSize="@dimen/symbol_size"/>

         <Button
             android:id="@+id/button_2"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin_commont"
             android:layout_marginEnd="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=""
             android:textSize="@dimen/symbol_size"/>

         <Button
             android:id="@+id/button_3"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=""
             android:textSize="@dimen/symbol_size"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/line_4_5_6"
          android:layout_width="match_parent"
          android:layout_height="@dimen/box_size"
          android:layout_weight="1"
          android:orientation="horizontal">

         <Button
             android:id="@+id/button_4"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginEnd="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=""
             android:textSize="@dimen/symbol_size"/>

         <Button
             android:id="@+id/button_5"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin_commont"
             android:layout_marginEnd="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=""
             android:textSize="@dimen/symbol_size"/>

         <Button
             android:id="@+id/button_6"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=""
             android:textSize="@dimen/symbol_size"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/line_7_8_9"
          android:layout_width="match_parent"
          android:layout_height="@dimen/box_size"
          android:layout_weight="1"
          android:orientation="horizontal">

         <Button
             android:id="@+id/button_7"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginEnd="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=""
             android:textSize="@dimen/symbol_size"/>

         <Button
             android:id="@+id/button_8"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin_commont"
             android:layout_marginEnd="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=""
             android:textSize="@dimen/symbol_size"/>

         <Button
             android:id="@+id/button_9"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin_commont"
             android:layout_weight="1"
             android:text=""
             android:textSize="@dimen/symbol_size"/>
      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_button_restarting"
          android:orientation="horizontal">

         <Button
             android:id="@+id/button_restarting"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginEnd="@dimen/margin_commont"
             android:layout_weight="1"
             android:backgroundTint="@color/red"
             android:text="@string/button_restarting" />

      </LinearLayout>

   </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>