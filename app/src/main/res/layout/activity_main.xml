<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:id="@+id/linearLayout"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_margin="16dp"
       android:layout_weight="3"
       android:orientation="vertical"
       tools:ignore="MissingConstraints"
       tools:layout_editor_absoluteX="16dp">

      <LinearLayout
          android:id="@+id/line_1_2_3"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_weight="1"
          android:orientation="horizontal">

         <Button
             android:id="@+id/button_1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginEnd="8dp"
             android:layout_weight="1" />

         <Button
             android:id="@+id/button_2"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="8dp"
             android:layout_marginEnd="8dp"
             android:layout_weight="1" />

         <Button
             android:id="@+id/button_3"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="8dp"
             android:layout_weight="1" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/line_4_5_6"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_weight="1"
          android:orientation="horizontal">

         <Button
             android:id="@+id/button_4"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginEnd="8dp"
             android:layout_weight="1" />

         <Button
             android:id="@+id/button_5"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="8dp"
             android:layout_marginEnd="8dp"
             android:layout_weight="1" />

         <Button
             android:id="@+id/button_6"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="8dp"
             android:layout_weight="1" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/line_7_8_9"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_weight="1"
          android:orientation="horizontal">

         <Button
             android:id="@+id/button_7"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginEnd="8dp"
             android:layout_weight="1" />

         <Button
             android:id="@+id/button_8"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="8dp"
             android:layout_marginEnd="8dp"
             android:layout_weight="1" />

         <Button
             android:id="@+id/button_9"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="8dp"
             android:layout_weight="1" />
      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginTop="32dp"
          android:layout_weight="2"
          android:orientation="horizontal">

         <Button
             android:id="@+id/button_player1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginEnd="8dp"
             android:layout_weight="1"
             android:backgroundTint="@color/red"
             android:text="JUGADOR 1" />

         <Button
             android:id="@+id/button_player2"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginStart="8dp"
             android:layout_weight="1"
             android:backgroundTint="@color/blue"
             android:text="JUGADOR 2" />

      </LinearLayout>

   </LinearLayout>

   <TextView
       android:id="@+id/textView_Victoria"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/text_victory"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout"
       tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>